{
  "channels": {
    "slack": {
      "client_id": "xxxx",
      "client_secret": "xxxx",
      "verification_token": "xxxx",
      "redirect_uri": "xxxx"
    },
    "facebook": {
      "app_secret": "xxxx",
      "verification_token": "xxxx",
      "page_access_token": "xxxx"
    }
  },
  "conversation": {
    "username": "xxxx",
    "password": "xxxx",
    "workspace_id": "xxxx"
  },
  "openwhisk": {
    "apihost": "${WSK_API_HOST}",
    "api_key": "${WSK_API_KEY}",
    "namespace": "${WSK_NAMESPACE}"
  },
  "pipeline": [
    {
      "name": "slack-flexible-pipeline",
      "actions": [
        "slack/receive",
        "starter-code/normalize-slack-for-conversation",
        "context/load-context",
        "starter-code/pre-conversation",
        "conversation/call-conversation",
        "starter-code/normalize-conversation-for-slack",
        "starter-code/post-conversation",
        "context/save-context",
        "slack/post"
      ]
    },
    {
      "name": "facebook-flexible-pipeline",
      "actions": [
        "facebook/receive",
        "starter-code/normalize-facebook-for-conversation",
        "context/load-context",
        "starter-code/pre-conversation",
        "conversation/call-conversation",
        "starter-code/normalize-conversation-for-facebook",
        "starter-code/post-conversation",
        "context/save-context",
        "facebook/post"
      ]
    }
  ]
}
